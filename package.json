{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --include-dependencies",
    "watch": "lerna run watch --parallel",
    "fmt": "prettier --write packages/**/*.ts",
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=4096 jest --colors",
    "gen": "yarn workspace shiki-site gen",
    "release": "lerna publish",
    "update": "npm run update:themes && npm run update:grammars",
    "update:themes": "bash ./scripts/pullThemes.sh",
    "update:grammars": "bash ./scripts/pullGrammars.sh"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,yml}": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/fs-extra": "^9.0.4",
    "@types/jest": "^26.0.16",
    "@types/js-yaml": "^4.0.0",
    "@types/json5": "^2.2.0",
    "@types/node": "^14.14.10",
    "@types/unzipper": "^0.10.3",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "esno": "^0.5.0",
    "fast-plist": "^0.1.2",
    "fs-extra": "^9.0.1",
    "jest": "^26.6.3",
    "json5": "^2.1.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "lodash.kebabcase": "^4.1.1",
    "prettier": "^2.2.1",
    "rollup": "^2.34.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-dts": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^26.4.4",
    "tsup": "^3.10.1",
    "typescript": "^4.1.2",
    "unzipper": "^0.10.11",
    "yorkie": "^2.0.0"
  },
  "license": "MIT"
}
